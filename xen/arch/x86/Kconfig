config X86_64
	def_bool y

config X86
	def_bool y
	select HAS_IOPORTS
	select HAS_ACPI
	select HAS_PASSTHROUGH
	select HAS_VIDEO
	select HAS_VGA
	select HAS_CPUFREQ
	select HAS_PCI
	select HAS_NS16550
	select HAS_GDBSX
	select HAS_PDX
	select HAS_KEXEC

config ARCH_DEFCONFIG
	string
	default "arch/x86/x86_64_defconfig" if X86_64

menu "Architecture Features"

endmenu

